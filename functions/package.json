    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "stripe": "^14.15.0",
    "mercadopago": "^2.0.0",
    "twilio": "^4.20.0",
    "nodemailer": "^6.9.8",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^3.0.8",
    "joi": "^17.12.0",
    "moment": "^2.30.1",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "axios": "^1.6.5",
    "sharp": "^0.33.2",
    "pdf-lib": "^1.17.1",
