{
  "name": "petshop-saas-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for PetShop SaaS",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
